---
import ButtonDaddy from './ButtonDaddy'
export interface Props {
	title: string;
 
}

const { title} = Astro.props;
---

<header class="py-16 text-center text-4xl">
    <h1>{title || "ui title"}</h1>
    <button id="cart" class="text-sm bg-rose-500 text-white  font-semibold rounded-md py-2 px-4">add to cart</button>
    <ButtonDaddy client:load/>
</header>

<script>
  let count = 0;
  const cart = document.querySelector('#cart')
  cart.addEventListener('click', (e)=>{
   document.querySelector('#cart-items').textContent =  `${count++}`
    
  })
</script>